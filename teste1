//  1º teste: fazer um sistema de 4 ou 6 jogadores que recebem 3 cartas cada, após elas serem embaralhadas.
//  Por hora, são consideradas as seguintes classes: Carta, Baralho, Jogador, Time e Controlador (que controlará o jogo).
//
//  A) Setar o número de jogadores; (NÃO TESTADO)

Class Controlador {
  private:
    int numero_jogadores;
  public:
    void set_numero_jogadores(int var){ numero_jogadores = var; }
}

Controlador ctr;

int main(){
  
  bool escolha_numero_jogadores = true;
  while(escolha_numero_jogadores == true) {
    
    char numero_jogadores_char[];
    std::cout << "\n" << "Insira o numero de jogadores" << "\n";
    std::cin >> numero_jogadores_char;
  
    if(numero_jogadores_char[0] != '4' || numero_jogadores_char[0] != '6') {
      std::cout << "\n" << "Numero invalido. Insira novamente." << "\n";
    } else {
      ctr.set_numero_jogadores(atoi(numero_jogadores_char[0]));
      std::cout << "\n" << "Número de jogadores definido." << "\n";
      escolha_numero_jogadores = false;
    }
  }
}


//  B) Ler e embaralhar as cartas;






//  C) Distribuir três cartas para cada jogador.




#pragma once
#include <vector>
#include <algorithm>
#include <fstream>
#include "Carta.h"
class Baralho
{
private:
	std::vector<Carta> baralho;
public:
	Baralho(){};
	~Baralho(){};

	void ler_baralho(){
		std::ifstream baralho_txt;
		baralho_txt.open("baralho.txt");
		
	}
	
	void embaralhar(){ random_shuffle(baralho.begin(), baralho.end()); }
};
